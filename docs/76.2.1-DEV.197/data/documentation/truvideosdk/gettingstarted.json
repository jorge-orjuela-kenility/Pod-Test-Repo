{"schemaVersion":{"major":0,"patch":0,"minor":3},"hierarchy":{"paths":[["doc:\/\/com.truvideo.TruvideoSdk\/documentation\/TruvideoSdk"]]},"primaryContentSections":[{"content":[{"type":"heading","anchor":"Overview","text":"Overview","level":2},{"type":"paragraph","inlineContent":[{"text":"The ","type":"text"},{"type":"strong","inlineContent":[{"text":"TruVideo SDK","type":"text"}]},{"type":"text","text":" provides developers with a robust framework for managing secure user authentication, video workflows, and data management. It ensures reliable integration for video-centric applications on iOS."}]},{"inlineContent":[{"type":"text","text":"This SDK includes methods for:"}],"type":"paragraph"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Authenticating users with API keys and payloads."}]}]},{"content":[{"inlineContent":[{"text":"Managing session statuses, including checking for expiration and reinitialization.","type":"text"}],"type":"paragraph"}]}],"type":"unorderedList"},{"type":"paragraph","inlineContent":[{"type":"text","text":"Follow the steps below to integrate and authenticate with the SDK efficiently."}]},{"type":"codeListing","syntax":"swift","code":["    \/\/\/ Generates an HMAC-SHA256 signature using the provided secret key.","    \/\/\/","    \/\/\/ - Parameter key: The secret key used to generate the signature.","    \/\/\/ - Returns: A hexadecimal string representing the HMAC-SHA256 signature.","    func toHMACSHA256(using key: String) -> String {","        let data = Data(self.utf8)","        let keyData = Data(key.utf8)","        var macData = Data(count: Int(CC_SHA256_DIGEST_LENGTH))","        ","        macData.withUnsafeMutableBytes { macBytes in","            data.withUnsafeBytes { dataBytes in","                keyData.withUnsafeBytes { keyBytes in","                    CCHmac(","                        CCHmacAlgorithm(kCCHmacAlgSHA256),","                        keyBytes.baseAddress,","                        keyData.count,","                        dataBytes.baseAddress,","                        data.count,","                        macBytes.baseAddress","                    )","                }","            }","        }","        ","        return macData.map { String(format: \"%02hhx\", $0) }.joined()","    }"]},{"type":"heading","level":2,"text":"How to authenticate","anchor":"How-to-authenticate"},{"type":"paragraph","inlineContent":[{"type":"text","text":"The authenticate method requires the following inputs:"}]},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"text":"API Key","type":"text"}]},{"text":": The API key associated with your account, required to authorize requests.","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"text":"Payload","type":"text"}],"type":"strong"},{"text":": A payload generated by the generatePayload method containing device-specific information.","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"text":"Signature","type":"text"}]},{"type":"text","text":": An HMAC-SHA256 signature of the payload, created using a secret key."}]}]},{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"External ID (Optional)"}],"type":"strong"},{"type":"text","text":": An optional identifier for additional context in authentication."}],"type":"paragraph"}]}]},{"inlineContent":[{"text":"The following example demonstrates how to use the authenticate method:","type":"text"}],"type":"paragraph"},{"syntax":"swift","type":"codeListing","code":["    func authenticate() async throws {","        let payload = try TruvideoSdk.generatePayload()","        let signature = payload.toHMACSHA256(using: \"secretKey\")","        ","        try await TruvideoSdk.authenticate(","            apiKey: \"apiKey\",","            payload: \"payload\",","            signature: signature,","            externalId: \"externalId\"","        )","    }"]},{"text":"How to clear authentication","type":"heading","level":2,"anchor":"How-to-clear-authentication"},{"type":"codeListing","syntax":"swift","code":["    func clearAuthentication() async throws {","        try TruvideoSdk.clearAuthentication()","    }"]}],"kind":"content"}],"sections":[],"variants":[{"paths":["\/documentation\/truvideosdk\/gettingstarted"],"traits":[{"interfaceLanguage":"swift"}]},{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/truvideosdk\/gettingstarted"]}],"kind":"article","identifier":{"url":"doc:\/\/com.truvideo.TruvideoSdk\/documentation\/TruvideoSdk\/GettingStarted","interfaceLanguage":"swift"},"metadata":{"images":[{"identifier":"architecture.jpg","type":"icon"}],"roleHeading":"Sample Code","role":"sampleCode","title":"Getting started with TruvideoSdk","modules":[{"name":"TruvideoSdk"}]},"references":{"architecture.jpg":{"alt":null,"type":"image","variants":[{"url":"\/images\/architecture.jpg","traits":["1x","light"]}],"identifier":"architecture.jpg"},"doc://com.truvideo.TruvideoSdk/documentation/TruvideoSdk":{"abstract":[],"title":"TruvideoSdk","type":"topic","kind":"symbol","role":"collection","url":"\/documentation\/truvideosdk","identifier":"doc:\/\/com.truvideo.TruvideoSdk\/documentation\/TruvideoSdk"}},"variantOverrides":[{"patch":[{"path":"\/identifier\/interfaceLanguage","op":"replace","value":"occ"},{"path":"\/topicSections","value":null,"op":"add"},{"value":null,"op":"add","path":"\/seeAlsoSections"}],"traits":[{"interfaceLanguage":"occ"}]}]}