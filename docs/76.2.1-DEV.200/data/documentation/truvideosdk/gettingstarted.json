{"kind":"article","primaryContentSections":[{"kind":"content","content":[{"text":"Overview","type":"heading","anchor":"Overview","level":2},{"type":"paragraph","inlineContent":[{"text":"The ","type":"text"},{"type":"strong","inlineContent":[{"type":"text","text":"TruVideo SDK"}]},{"type":"text","text":" provides developers with a robust framework for managing secure user authentication, video workflows, and data management. It ensures reliable integration for video-centric applications on iOS."}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"This SDK includes methods for:"}]},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"text":"Authenticating users with API keys and payloads.","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Managing session statuses, including checking for expiration and reinitialization.","type":"text"}]}]}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"Follow the steps below to integrate and authenticate with the SDK efficiently."}]},{"syntax":"swift","type":"codeListing","code":["    \/\/\/ Generates an HMAC-SHA256 signature using the provided secret key.","    \/\/\/","    \/\/\/ - Parameter key: The secret key used to generate the signature.","    \/\/\/ - Returns: A hexadecimal string representing the HMAC-SHA256 signature.","    func toHMACSHA256(using key: String) -> String {","        let data = Data(self.utf8)","        let keyData = Data(key.utf8)","        var macData = Data(count: Int(CC_SHA256_DIGEST_LENGTH))","        ","        macData.withUnsafeMutableBytes { macBytes in","            data.withUnsafeBytes { dataBytes in","                keyData.withUnsafeBytes { keyBytes in","                    CCHmac(","                        CCHmacAlgorithm(kCCHmacAlgSHA256),","                        keyBytes.baseAddress,","                        keyData.count,","                        dataBytes.baseAddress,","                        data.count,","                        macBytes.baseAddress","                    )","                }","            }","        }","        ","        return macData.map { String(format: \"%02hhx\", $0) }.joined()","    }"]},{"level":2,"text":"How to authenticate","type":"heading","anchor":"How-to-authenticate"},{"inlineContent":[{"text":"The authenticate method requires the following inputs:","type":"text"}],"type":"paragraph"},{"items":[{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"API Key"}]},{"type":"text","text":": The API key associated with your account, required to authorize requests."}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"text":"Payload","type":"text"}]},{"type":"text","text":": A payload generated by the generatePayload method containing device-specific information."}]}]},{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"Signature"}],"type":"strong"},{"type":"text","text":": An HMAC-SHA256 signature of the payload, created using a secret key."}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"External ID (Optional)"}]},{"type":"text","text":": An optional identifier for additional context in authentication."}]}]}],"type":"unorderedList"},{"inlineContent":[{"type":"text","text":"The following example demonstrates how to use the authenticate method:"}],"type":"paragraph"},{"code":["    func authenticate() async throws {","        let payload = try TruvideoSdk.generatePayload()","        let signature = payload.toHMACSHA256(using: \"secretKey\")","        ","        try await TruvideoSdk.authenticate(","            apiKey: \"apiKey\",","            payload: \"payload\",","            signature: signature,","            externalId: \"externalId\"","        )","    }"],"type":"codeListing","syntax":"swift"},{"type":"heading","text":"How to clear authentication","anchor":"How-to-clear-authentication","level":2},{"syntax":"swift","code":["    func clearAuthentication() async throws {","        try TruvideoSdk.clearAuthentication()","    }"],"type":"codeListing"}]}],"identifier":{"url":"doc:\/\/com.truvideo.TruvideoSdk\/documentation\/TruvideoSdk\/GettingStarted","interfaceLanguage":"swift"},"metadata":{"images":[{"type":"icon","identifier":"architecture.jpg"}],"role":"sampleCode","title":"Getting started with TruvideoSdk","roleHeading":"Sample Code","modules":[{"name":"TruvideoSdk"}]},"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/truvideosdk\/gettingstarted"]},{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/truvideosdk\/gettingstarted"]}],"sections":[],"hierarchy":{"paths":[["doc:\/\/com.truvideo.TruvideoSdk\/documentation\/TruvideoSdk"]]},"schemaVersion":{"minor":3,"major":0,"patch":0},"references":{"architecture.jpg":{"identifier":"architecture.jpg","alt":null,"variants":[{"traits":["1x","light"],"url":"\/images\/architecture.jpg"}],"type":"image"},"doc://com.truvideo.TruvideoSdk/documentation/TruvideoSdk":{"kind":"symbol","identifier":"doc:\/\/com.truvideo.TruvideoSdk\/documentation\/TruvideoSdk","role":"collection","url":"\/documentation\/truvideosdk","type":"topic","title":"TruvideoSdk","abstract":[]}},"variantOverrides":[{"patch":[{"value":"occ","path":"\/identifier\/interfaceLanguage","op":"replace"},{"op":"add","path":"\/topicSections","value":null},{"value":null,"path":"\/seeAlsoSections","op":"add"}],"traits":[{"interfaceLanguage":"occ"}]}]}