56 signature.","    func toHMACSHA256(using key: String) -> String {","        let data = Data(self.utf8)","        let keyData = Data(key.utf8)","        var macData = Data(count: Int(CC_SHA256_DIGEST_LENGTH))","        ","        macData.withUnsafeMutableBytes { macBytes in","            data.withUnsafeBytes { dataBytes in","                keyData.withUnsafeBytes { keyBytes in","                    CCHmac(","                        CCHmacAlgorithm(kCCHmacAlgSHA256),","                        keyBytes.baseAddress,","                        keyData.count,","                        dataBytes.baseAddress,","                        data.count,","                        macBytes.baseAddress","                    )","                }","            }","        }","        ","        return macData.map { String(format: \"%02hhx\", $0) }.joined()","    }"],"syntax":"swift","type":"codeListing"},{"text":"How to authenticate","level":2,"type":"heading","anchor":"How-to-authenticate"},{"type":"paragraph","inlineContent":[{"text":"The authenticate method requires the following inputs:","type":"text"}]},{"items":[{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"API Key"}],"type":"strong"},{"text":": The API key associated with your account, required to authorize requests.","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"Payload"}]},{"type":"text","text":": A payload generated by the generatePayload method containing device-specific information."}]}]},{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"Signature"}]},{"type":"text","text":": An HMAC-SHA256 signature of the payload, created using a secret key."}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"text":"External ID (Optional)","type":"text"}]},{"type":"text","text":": An optional identifier for additional context in authentication."}],"type":"paragraph"}]}],"type":"unorderedList"},{"inlineContent":[{"text":"The following example demonstrates how to use the authenticate method:","type":"text"}],"type":"paragraph"},{"type":"codeListing","syntax":"swift","code":["    func authenticate() async throws {","        let payload = try TruvideoSdk.generatePayload()","        let signature = payload.toHMACSHA256(using: \"secretKey\")","        ","        try await TruvideoSdk.authenticate(","            apiKey: \"apiKey\",","            payload: \"payload\",","            signature: signature,","            externalId: \"externalId\"","        )","    }"]},{"anchor":"How-to-clear-authentication","level":2,"text":"How to clear authentication","type":"heading"},{"code":["    func clearAuthentication() async throws {","        try TruvideoSdk.clearAuthentication()","    }"],"syntax":"swift","type":"codeListing"}]}],"references":{"doc://com.truvideo.TruvideoSdk/documentation/TruvideoSdk":{"role":"collection","identifier":"doc:\/\/com.truvideo.TruvideoSdk\/documentation\/TruvideoSdk","url":"\/documentation\/truvideosdk","abstract":[],"title":"TruvideoSdk","type":"topic","kind":"symbol"},"architecture.jpg":{"type":"image","identifier":"architecture.jpg","variants":[{"traits":["1x","light"],"url":"\/images\/architecture.jpg"}],"alt":null}},"variantOverrides":[{"traits":[{"interfaceLanguage":"occ"}],"patch":[{"op":"replace","path":"\/identifier\/interfaceLanguage","value":"occ"},{"op":"add","path":"\/topicSections","value":null},{"value":null,"path":"\/seeAlsoSections","op":"add"}]}]}