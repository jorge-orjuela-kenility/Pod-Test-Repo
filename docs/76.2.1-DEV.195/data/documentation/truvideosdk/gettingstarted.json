{"primaryContentSections":[{"kind":"content","content":[{"anchor":"Overview","level":2,"type":"heading","text":"Overview"},{"type":"paragraph","inlineContent":[{"text":"The ","type":"text"},{"type":"strong","inlineContent":[{"type":"text","text":"TruVideo SDK"}]},{"text":" provides developers with a robust framework for managing secure user authentication, video workflows, and data management. It ensures reliable integration for video-centric applications on iOS.","type":"text"}]},{"type":"paragraph","inlineContent":[{"text":"This SDK includes methods for:","type":"text"}]},{"items":[{"content":[{"inlineContent":[{"text":"Authenticating users with API keys and payloads.","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"text","text":"Managing session statuses, including checking for expiration and reinitialization."}],"type":"paragraph"}]}],"type":"unorderedList"},{"inlineContent":[{"type":"text","text":"Follow the steps below to integrate and authenticate with the SDK efficiently."}],"type":"paragraph"},{"syntax":"swift","code":["    \/\/\/ Generates an HMAC-SHA256 signature using the provided secret key.","    \/\/\/","    \/\/\/ - Parameter key: The secret key used to generate the signature.","    \/\/\/ - Returns: A hexadecimal string representing the HMAC-SHA256 signature.","    func toHMACSHA256(using key: String) -> String {","        let data = Data(self.utf8)","        let keyData = Data(key.utf8)","        var macData = Data(count: Int(CC_SHA256_DIGEST_LENGTH))","        ","        macData.withUnsafeMutableBytes { macBytes in","            data.withUnsafeBytes { dataBytes in","                keyData.withUnsafeBytes { keyBytes in","                    CCHmac(","                        CCHmacAlgorithm(kCCHmacAlgSHA256),","                        keyBytes.baseAddress,","                        keyData.count,","                        dataBytes.baseAddress,","                        data.count,","                        macBytes.baseAddress","                    )","                }","            }","        }","        ","        return macData.map { String(format: \"%02hhx\", $0) }.joined()","    }"],"type":"codeListing"},{"anchor":"How-to-authenticate","text":"How to authenticate","type":"heading","level":2},{"inlineContent":[{"text":"The authenticate method requires the following inputs:","type":"text"}],"type":"paragraph"},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"text":"API Key","type":"text"}],"type":"strong"},{"type":"text","text":": The API key associated with your account, required to authorize requests."}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"Payload"}]},{"type":"text","text":": A payload generated by the generatePayload method containing device-specific information."}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"text":"Signature","type":"text"}]},{"text":": An HMAC-SHA256 signature of the payload, created using a secret key.","type":"text"}]}]},{"content":[{"inlineContent":[{"inlineContent":[{"text":"External ID (Optional)","type":"text"}],"type":"strong"},{"text":": An optional identifier for additional context in authentication.","type":"text"}],"type":"paragraph"}]}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"The following example demonstrates how to use the authenticate method:"}]},{"syntax":"swift","code":["    func authenticate() async throws {","        let payload = try TruvideoSdk.generatePayload()","        let signature = payload.toHMACSHA256(using: \"secretKey\")","        ","        try await TruvideoSdk.authenticate(","            apiKey: \"apiKey\",","            payload: \"payload\",","            signature: signature,","            externalId: \"externalId\"","        )","    }"],"type":"codeListing"},{"anchor":"How-to-clear-authentication","level":2,"text":"How to clear authentication","type":"heading"},{"type":"codeListing","syntax":"swift","code":["    func clearAuthentication() async throws {","        try TruvideoSdk.clearAuthentication()","    }"]}]}],"metadata":{"modules":[{"name":"TruvideoSdk"}],"role":"sampleCode","roleHeading":"Sample Code","images":[{"type":"icon","identifier":"architecture.jpg"}],"title":"Getting started with TruvideoSdk"},"sections":[],"schemaVersion":{"minor":3,"patch":0,"major":0},"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/truvideosdk\/gettingstarted"]},{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/truvideosdk\/gettingstarted"]}],"hierarchy":{"paths":[["doc:\/\/com.truvideo.TruvideoSdk\/documentation\/TruvideoSdk"]]},"identifier":{"url":"doc:\/\/com.truvideo.TruvideoSdk\/documentation\/TruvideoSdk\/GettingStarted","interfaceLanguage":"swift"},"kind":"article","references":{"doc://com.truvideo.TruvideoSdk/documentation/TruvideoSdk":{"identifier":"doc:\/\/com.truvideo.TruvideoSdk\/documentation\/TruvideoSdk","title":"TruvideoSdk","url":"\/documentation\/truvideosdk","role":"collection","abstract":[],"kind":"symbol","type":"topic"},"architecture.jpg":{"variants":[{"url":"\/images\/architecture.jpg","traits":["1x","light"]}],"identifier":"architecture.jpg","alt":null,"type":"image"}},"variantOverrides":[{"patch":[{"path":"\/identifier\/interfaceLanguage","op":"replace","value":"occ"},{"path":"\/topicSections","op":"add","value":null},{"value":null,"path":"\/seeAlsoSections","op":"add"}],"traits":[{"interfaceLanguage":"occ"}]}]}