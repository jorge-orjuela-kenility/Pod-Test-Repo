nc throws {","        let payload = try TruvideoSdk.generatePayload()","        let signature = payload.toHMACSHA256(using: \"secretKey\")","        ","        try await TruvideoSdk.authenticate(","            apiKey: \"apiKey\",","            payload: \"payload\",","            signature: signature,","            externalId: \"externalId\"","        )","    }"],"type":"codeListing"},{"type":"heading","text":"How to clear authentication","anchor":"How-to-clear-authentication","level":2},{"code":["    func clearAuthentication() async throws {","        try TruvideoSdk.clearAuthentication()","    }"],"type":"codeListing","syntax":"swift"}],"kind":"content"}],"variants":[{"paths":["\/documentation\/truvideosdk\/gettingstarted"],"traits":[{"interfaceLanguage":"swift"}]},{"paths":["\/documentation\/truvideosdk\/gettingstarted"],"traits":[{"interfaceLanguage":"occ"}]}],"kind":"article","references":{"doc://com.truvideo.TruvideoSdk/documentation/TruvideoSdk":{"abstract":[],"title":"TruvideoSdk","type":"topic","kind":"symbol","role":"collection","url":"\/documentation\/truvideosdk","identifier":"doc:\/\/com.truvideo.TruvideoSdk\/documentation\/TruvideoSdk"},"architecture.jpg":{"identifier":"architecture.jpg","type":"image","variants":[{"url":"\/images\/architecture.jpg","traits":["1x","light"]}],"alt":null}},"variantOverrides":[{"patch":[{"value":"occ","path":"\/identifier\/interfaceLanguage","op":"replace"},{"value":null,"op":"add","path":"\/topicSections"},{"op":"add","path":"\/seeAlsoSections","value":null}],"traits":[{"interfaceLanguage":"occ"}]}]}